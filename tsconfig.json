{
    "compilerOptions": {
        "outDir": "./dist",
        "allowJs": true,
        "checkJs": true,
        "target": "es5",
        "jsx": "react",
        "forceConsistentCasingInFileNames": true,
        "noFallthroughCasesInSwitch": true,
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "sourceMap": true
    },
    "include": [
        "./src/**/*",
        "./spec/**/*"
    ]
}
